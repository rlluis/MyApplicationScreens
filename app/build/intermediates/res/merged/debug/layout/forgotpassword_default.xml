<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	style="@style/default_screenlet"
	>


	<EditText
		android:id="@+id/liferay_forgot_login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:drawableLeft="@drawable/default_user_icon"
		android:drawableStart="@drawable/default_user_icon"
		android:hint="@string/screen_name"
		/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		>

		<Button
			android:id="@+id/liferay_forgot_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/request_password"
			/>

		<com.liferay.mobile.screens.base.ModalProgressBar
			android:id="@+id/liferay_progress"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical|start"
			android:theme="@style/white_theme"
			android:visibility="invisible"
			liferay:actionViewId="@id/liferay_forgot_button"
			/>
	</FrameLayout>
</com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordView>